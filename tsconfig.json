{
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        "target": "ES2019",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "src/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}
